[Unit]
Description=Heating calendar backend service
After=multi-user.target

[Service]
Type=simple
User=pi
ExecStart=uv run fastapi run /home/pi/git/heating_calendar/heating_calendar_backend/main.py --port 8000 --root-path api
WorkingDirectory=/home/pi/git/heating_calendar/heating_calendar_backend
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target